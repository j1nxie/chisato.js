{
	"compilerOptions": {
		"target": "es2021",
		"module": "CommonJS",
		"lib": [
			"es2019",
		],
		"rootDir": "./src",
		"outDir": "./build",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": true,
		"strictNullChecks": true,
		"moduleResolution": "node"
	}
}
