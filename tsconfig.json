{
	"compilerOptions": {
		"target": "es2021",
		"module": "CommonJS",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"outDir": "./build",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": true,
		"strictNullChecks": true
	}
}
